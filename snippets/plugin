const <PluginNameCapitalized> = require('../services/<PluginNameLowered>');

exports.plugin = {
    pkg: require('../package.json'),
    register: async function(server, options) {

        server.route({
            path: '/<PluginNameLowered>',
            method: 'GET',
            handler: (request, h) => {
                return <PluginNameCapitalized>.getAll();
            }
        });

        server.route({
            path: '/<PluginNameLowered>',
            method: 'POST',
            handler: (request, h) => {
                return <PluginNameCapitalized>.create(request.payload);
            }
        });

    }
}